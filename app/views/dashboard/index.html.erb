<h1> Admin Dashboard </h1>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h1>Listing Rooms</h1>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Capacity</th>
            <th>Building</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @rooms.each do |room| %>
            <tr>
              <td><%= room.name %></td>
              <td><%= room.capacity %></td>
              <td><%= room.building %></td>
              <td><%= link_to 'Show', room %></td>
              <td><%= link_to 'Edit', edit_room_path(room) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<br>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h1>Listing Events</h1>

      <table>
        <thead>
          <tr>
            <th>Start time</th>
            <th>Duration</th>
            <th>Description</th>
            <th>Room</th>
            <th>User</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @events.each do |event| %>
            <tr>
              <td><%= event.start_time %></td>
              <td><%= event.duration %></td>
              <td><%= event.description %></td>
              <td><%= event.room %></td>
              <td><%= event.user %></td>
              <td><%= link_to 'Show', event %></td>
              <td><%= link_to 'Edit', edit_event_path(event) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<br>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h1>Listing Invitees</h1>

      <table>
        <thead>
          <tr>
            <th>Event</th>
            <th>User</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @invitees.each do |invitee| %>
            <tr>
              <td><%= invitee.event_id %></td>
              <td><%= invitee.user_id %></td>
              <td><%= link_to 'Show', invitee %></td>
              <td><%= link_to 'Edit', edit_invitee_path(invitee) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= link_to 'New Event', new_event_path %>

