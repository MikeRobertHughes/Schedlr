  <div class="row">
    <div class="colspan-3">
      <p class="text-left">
        <h1><%= @room.name.titleize %><h1>
      </p>

      <p class="text-left">
        <strong>Capacity:</strong>
        <%= @room.capacity %>
      </p>

      <p class="text-left">
        <strong>Building:</strong>
        <%= @room.building.name.titleize %>
      </p>
    </div>

    <p class="text-left">
        <%= image_tag attachment_url(@room, :room_image, :fill, 300, 300, format: "jpg") %>
      </p>
    </div>

  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Who Made The Reservation</th>
          <th>Start Time</th>
          <th>Duration</th>
          <th>Description</th>
        </tr>
      </thead>

      <tbody>
        <% @room.events.each do |event| %>
          <tr>
            <%= link_to event do %>
              <td><%= event.user.full_name.titleize %></td>
              <td><%= link_to event.formatted_start_time %></td> <!--helpful resource - https://hackhands.com/format-datetime-ruby/-->
              <td><%= link_to event.formatted_event_duration %></td>
              <td><%= link_to event.description %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

<%= form_for Event.new do |f| %>

<div class="field">
  <%= f.label :start_time %><br>
  <%= f.datetime_select :start_time %>
</div>
<div class="field">
  <%= f.label :duration %><br>
  <%= f.number_field :duration %>
</div>
<div class="field">
  <%= f.label :description %><br>
  <%= f.text_field :description %>
</div>
<div>
  <%= f.label :private? %>
  <%= f.check_box :private %>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<%= f.hidden_field(:room_id, value: @room.id) %>

<% end %>
<%= link_to 'Edit', edit_room_path(@room) %> |
<%= link_to 'Back', rooms_path %>
