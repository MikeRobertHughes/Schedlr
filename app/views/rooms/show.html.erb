<div class="container">
  <div class="row">
    <div class="colspan-3">
      <p class="text-left">
        <strong>Room Name:</strong>
        <%= @room.name %>
      </p>

      <p class="text-left">
        <strong>Capacity:</strong>
        <%= @room.capacity %>
      </p>

      <p class="text-left">
        <strong>Building:</strong>
        <%= @room.building.name %>
      </p>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Who Made The Reservation</th>
          <th>Start Time</th>
          <th>Duration</th>
          <th>Description</th>
        </tr>
      </thead>

      <tbody>
        <% @room.events.each do |event| %>
          <tr>
            <td><center><p class="text-capitalize"><%= event.user.full_name %></p></center></td>
            <td><%= event.start_time.strftime("%B %d, %Y @ %I:%M%P") %></td> <!--helpful resource - https://hackhands.com/format-datetime-ruby/-->
            <td><%= "#{event.duration}" + " minutes" %></td>
            <td><%= event.description %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <td><%= react_component('ScheduleEventForm', userID: 1, roomID: room.id ) %></td>
</div>
<%= link_to 'Edit', edit_room_path(@room) %> |
<%= link_to 'Back', rooms_path %>
