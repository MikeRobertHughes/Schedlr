
<h1>Listing Events</h1>
<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Start time</th>
        <th>Duration</th>
        <th>Description</th>
        <th>Room</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.start_time.strftime("%B %d, %Y @ %I:%M%P") %></td>
          <td><%= "#{event.duration} minutes" %></td>
          <td><%= event.description %></td>
          <td><%= event.room.name %></td>
          <td><%= event.user.full_name %></td>
          <td><button class="btn btn-default" type="submit"><%= link_to 'Show', event %></button></td>
          <td><button class="btn btn-default" type="submit"><%= link_to 'Edit', edit_event_path(event) %></button></td>
          <td><button class="btn btn-default" type="submit"><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<br>

