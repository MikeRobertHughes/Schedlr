
<h1> User Dashboard for <%= current_user.full_name %> </h1><br>
<div class="row">
  <div class="well col-md-4">
    <h1>Events</h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Start time</th>
          <th>Duration</th>
          <th>Description</th>
          <th>Room</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.start_time %></td>
            <td><%= event.duration %></td>
            <td><%= link_to event.description, event_path(event) %></td>
            <td><%= event.room %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
