
<h1>Listing Buildings</h1>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Street</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>Site</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @buildings.each do |building| %>
        <tr>
          <td><p class="text-capitalize"><%= building.name %></p></td>
          <td><p class="text-capitalize"><%= building.street %></p></td>
          <td><p class="text-capitalize"><%= building.city %></p></td>
          <td><p class="text-capitalize"><%= building.state %></p></td>
          <td><%= building.zip %></td>
          <td><p class="text-capitalize"><%= building.site.name %></p></td>
          <td><button class="btn btn-default" type="submit"><%= link_to 'Show', building %></button></td>
          <td><button class="btn btn-default" type="submit"><%= link_to 'Edit', edit_building_path(building) %></button></td>
          <td><button class="btn btn-default" type="submit"><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

