<h1>Listing Sites</h1>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Company</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @sites.each do |site| %>
        <tr>
          <td><%= site.name %></td>
          <td><%= site.location %></td>
          <td><%= site.company.name %></td>
          <td><button class="btn btn-default" type="submit"><%= link_to 'Show', site %></button></td>
          <td><button class="btn btn-default" type="submit"><%= link_to 'Edit', edit_site_path(site) %></button></td>
          <td><button class="btn btn-default" type="submit"><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

